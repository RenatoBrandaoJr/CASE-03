modules = ["web", "nodejs-20", "php-8.2"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40926090
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server . -p 5000 --bind 0.0.0.0"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "npx http-server . -p 8080"]
